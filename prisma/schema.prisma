datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  tfa       Boolean  @default(false) // Whether 2FA is enabled
  tfaSecret String?  // Secret key for 2FA (if enabled)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[] 

  TwoFactorAuthSetup TwoFactorAuthSetup?
}

model TwoFactorAuthSetup {
  id        String   @id @default(uuid())
  userId    String   @unique
  secret    String   // Secret key for 2FA setup
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // expiredAt DateTime? // Optional expiration for the setup process

  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  ip        String?
  userAgent String?
  device    String?
  state     String   @unique // Unique state for session identification

  lastTfaAt DateTime? // Timestamp of the last successful 2FA verification
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiredAt DateTime?
  
  user      User     @relation(fields: [userId], references: [id])
}
